{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}

   <div class="flex justify-center items-center min-h-screen">
    <div class="w-5/12 bg-white p-6 rounded-lg shadow-lg">
        <div class="flex items-center mb-4">
            <i class="fa-solid fa-user-plus text-2xl mr-2"></i>
            <h2 class="text-2xl font-bold text-gray-800">Créer un compte</h2>
        </div>

        {{ form_start(form, { 'attr': { 'class': 'space-y-4', 'data-turbo': 'false' } }) }}


        <div>
            {{ form_label(form.username, "Nom d'utilisateur", {'label_attr': {'class': 'label-field'}}) }}
            {{ form_widget(form.username, {'attr': {'class': 'input-field'}}) }}
            {{ form_errors(form.username) }}
        </div>
        
        <div>
            {{ form_label(form.first_name, "Prénom", {'label_attr': {'class': 'label-field'}}) }}
            {{ form_widget(form.first_name, {'attr': {'class': 'input-field'}}) }}
            {{ form_errors(form.first_name) }}
        </div>

        <div>
            {{ form_label(form.last_name, "Nom", {'label_attr': {'class': 'label-field'}}) }}
            {{ form_widget(form.last_name, {'attr': {'class': 'input-field'}}) }}
            {{ form_errors(form.last_name) }}
        </div>
        

        <div>
            {{ form_label(form.email, "Adresse email", {'label_attr': {'class': 'label-field'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'input-field'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div>
            {{ form_label(form.password, "Mot de passe", {'label_attr': {'class': 'label-field'}}) }}
            {{ form_widget(form.password, {'attr': {'class': 'input-field'}}) }}
            {{ form_errors(form.password) }}
        </div>

        <div>
            {{ form_label(form.confirmPassword, "Confirmer le mot de passe", {'label_attr': {'class': 'label-field'}}) }}
            {{ form_widget(form.confirmPassword, {'attr': {'class': 'input-field'}}) }}
            {{ form_errors(form.confirmPassword) }}
        </div>


        <button type="submit" class="w-full bg-primary text-white font-bold py-2 px-4 rounded-full hover:bg-primary-dark transition duration-300">
            S'inscrire
        </button>

        {{ form_end(form) }}
    </div>
</div>

{% endblock %}