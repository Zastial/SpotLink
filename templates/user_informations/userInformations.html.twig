{% extends 'base.html.twig' %}

{% block title %}Mes informations{% endblock %}

{% block body %}
    <div class="flex justify-center items-center min-h-screen">
        <div class="w-80 bg-white p-6 rounded-lg shadow-lg mt-10">
            <div class="flex items-center mb-4">
                <i class="fa-solid fa-user text-2xl mr-2"></i>
                <h2 class="text-2xl font-bold text-gray-800">Mes Informations de compte</h2>
            </div>

            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

            <div>
                {{ form_label(form.username, "Nom d'utilisateur*", {'label_attr': {'class': 'label-field'}}) }}
                {{ form_widget(form.username, {'attr': {'class': 'input-field', 'required': 'required'}}) }}
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div>
                    {{ form_label(form.last_name, "Nom*", {'label_attr': {'class': 'label-field'}}) }}
                    {{ form_widget(form.last_name, {'attr': {'class': 'input-field', 'required': 'required'}}) }}
                </div>

                <div>
                    {{ form_label(form.first_name, "Pr√©nom*", {'label_attr': {'class': 'label-field'}}) }}
                    {{ form_widget(form.first_name, {'attr': {'class': 'input-field'}}) }}
                </div>
            </div>
            <div>
                {{ form_label(form.email, "Adresse e-mail*", {'label_attr': {'class': 'label-field'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'input-field', 'required': 'required'}}) }}
            </div>

            <div>
                {{ form_label(form.password, "Mot de passe", {'label_attr': {'class': 'label-field'}}) }}
                {{ form_widget(form.password, {'attr': {'class': 'input-field'}}) }}
            </div>   
            <p> * Champs obligatoires </p>    
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4"> 
                <button class="w-full bg-primary text-white font-bold py-2 px-4 rounded-full hover:bg-primary-dark transition duration-300">
                    Modifier les informations
                </button>
                <button class="w-full bg-red text-white font-bold py-2 px-4 rounded-full hover:bg-red-dark transition duration-300">
                    Supprimer le compte
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
