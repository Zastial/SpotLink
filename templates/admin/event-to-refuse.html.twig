{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!
{% endblock %}

{% block body %}

	<div class="flex flex-col items-center">
		<h1 class="pt-5 pb-5 text-lg">Rappel des Informations</h1>
		<table class="min-w-[90%] border border-gray shadow-lg rounded-lg">
			<tr class="bg-gray-100 text-gray-600 uppercase text-sm leading-normal">
				<th class="py-3 px-6 text-left">Id</th>
				<th class="py-3 px-6 text-left">Catégorie</th>
				<th class="py-3 px-6 text-left">Titre</th>
				<th class="py-3 px-6 text-left">Description</th>
				<th class="py-3 px-6 text-left">Adresse</th>
			</tr>
			<tr class="border-b border-gray-200 hover:bg-gray-100">
				<td class="py-3 px-6 text-left">{{ event.id }}</td>
				<td class="py-3 px-6 text-left">{{ event.category.name }}</td>
				<td class="py-3 px-6 text-left">{{ event.name }}</td>
				<td class="py-3 px-6 text-left">{{ event.description }}</td>
				<td class="py-3 px-6 text-left">{{ event.locationName }}</td>
			</tr>
		</table>

		<form method="POST" class="pt-8 space-y-4">
			<div class="flex flex-col">
				<label for="statusId" class="text-lg font-medium text-gray-700">Action :</label>
				<select id="statusId" name="statusId" class="mt-2 p-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
					<option value="5">REFUS PARTIEL</option>
                    <option value="4">REFUS TOTAL</option>
				</select>
			</div>

			<div class="flex flex-col">
				<label for="comment" class="text-lg font-medium text-gray-700">Commentaires :</label>
				<textarea id="comment" name="comment" rows="4" cols="50" class="mt-2 p-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Entrez vos commentaires ici...">{{ comment }}</textarea>
			</div>

			<div>
				<button type="submit" class="w-full py-2 px-4 bg-red-600 hover:bg-red-700 text-white font-bold rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 transition duration-200">Refuser l'événement</button>
			</div>
		</form>

	</div>
{% endblock %}
